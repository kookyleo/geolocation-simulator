{
  "manifest_version": 3,
  "name": "Geolocation Simulator",
  "version": "1.0",
  "description": "Used to simulate geolocation in the browser.",
  "permissions": [
    "sidePanel", 
    "geolocation",
    "debugger",
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {
    "default_title": "Open Geolocation Simulator"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*"],
      "matches": ["<all_urls>"]
    }
  ]
}